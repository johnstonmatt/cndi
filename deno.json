{
  "version": "2.0.11",
  "deno_version": "1.40.2",
  "tasks": {
    "compile-win": "deno compile --allow-all --target x86_64-pc-windows-msvc --v8-flags=--max-old-space-size=8000 --output dist/cndi-win.exe dist/cndi.esm.js",
    "compile-linux": "deno compile --allow-all --target x86_64-unknown-linux-gnu --v8-flags=--max-old-space-size=8000 --output dist/cndi-linux dist/cndi.esm.js",
    "compile-mac": "deno compile --allow-all --target x86_64-apple-darwin --v8-flags=--max-old-space-size=8000 --output dist/cndi-mac dist/cndi.esm.js",
    "compile-all": "deno task compile-win && deno task compile-linux && deno task compile-mac",
    "clean-dist": "rm dist/cndi-mac dist/cndi-linux dist/cndi-win.exe dist/cndi.esm.js || true",
    "bundle": "deno run -A bundle/bundle.ts",
    "build": "deno lint && deno fmt && deno task clean-dist && deno task bundle && deno task compile-all",
    "build-linux": "deno lint && deno fmt && deno task clean-dist && deno task compile-linux",
    "test": "deno test --allow-all --v8-flags=--max-old-space-size=8000",
    "test-fast": "deno test --allow-all --v8-flags=--max-old-space-size=8000 --fail-fast",
    "test-watch": "deno test --allow-all --v8-flags=--max-old-space-size=8000 --watch"
  },
  "imports": {
    "src/": "./src/",
    "deps": "./src/deps.ts",
    "cdktf-deps": "./src/outputs/terraform/cdktf-deps.ts",
    "consts": "./src/constants.ts",
    "test-deps": "./src/tests/deps.ts",
    "get-project-root": "./_here.ts",
    "child_process": "node:child_process"
  },
  "lint": {
    "exclude": ["dist/*"]
  },
  "fmt": {
    "exclude": ["dist/*"]
  }
}
